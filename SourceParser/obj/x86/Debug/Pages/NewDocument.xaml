<Page
    x:Class="SourceParser.Pages.NewDocument"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SourceParser"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:ConnectionId='2' x:Name="Styles">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button x:ConnectionId='3' x:Name="ButtonAdd" Grid.Column="0" Grid.Row="0"                         Width="160" Height="160" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10">
            <Canvas Width="140" Height="140" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Rectangle Fill="AliceBlue" Width="120" Height="20" Margin="10" RadiusX="5" RadiusY="5" Canvas.ZIndex="1" Canvas.Top="50"/>
                <Rectangle Fill="AliceBlue" Width="20" Height="120" Margin="10" RadiusX="5" RadiusY="5" Canvas.ZIndex="2" Canvas.Left="50"/>
            </Canvas>
        </Button>
        <GridView x:ConnectionId='4' x:Name="GridOfButtons" ItemsSource="{Binding Documents}" SelectedItem="{Binding SelectedDocument, Mode=TwoWay}" SelectionMode="Single" Width="Auto" Height="Auto" Grid.Column="1" Grid.Row="0">
            <GridView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="10" Background="LightGray">
                        <TextBlock Width="140" Height="140" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10" 
                            Text="{Binding Path=Title}">
                        <!--CommandParameter="{Binding SelectedButton}"-->
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        <StackPanel Grid.Column="2" Margin="10" Padding="0 0 5 0">
            <TextBlock Text="Выбранный элемент"  />
            <TextBlock Text="Название документа" />
            <TextBox Text="{Binding Path=SelectedDocument.Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="Дата" />
            <TextBox Text="{Binding Path=SelectedDocument.Date, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="Издание" />
            <TextBox Text="{Binding Path=SelectedDocument.Edition, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="URL-адресс" />
            <TextBox Text="{Binding Path=SelectedDocument.URLAdress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="Язык" />
            <TextBox Text="{Binding Path=SelectedDocument.Language, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="Первая страница" />
            <TextBox Text="{Binding Path=SelectedDocument.Pages.PageFirst, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="Вторая страница" />
            <TextBox Text="{Binding Path=SelectedDocument.Pages.PageLast, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="Название конференции" />
            <TextBox Text="{Binding Path=SelectedDocument.TitleOfConference, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="Том" />
            <TextBox Text="{Binding Path=SelectedDocument.Volume, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="Дополнительная информация" />
            <TextBox Text="{Binding Path=SelectedDocument.AdditionalInf, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Grid>
                <Button x:ConnectionId='5' x:Name="ButtonSave" Content="Сохранить"                          Width="auto" Height="auto" Margin="0 10 0 0" VerticalAlignment="Top" HorizontalAlignment="Left"></Button>
                <Button x:ConnectionId='6' x:Name="ButtonDelete" Content="Удалить"                            Width="auto" Height="auto" Margin="0 10 0 0" VerticalAlignment="Top"  HorizontalAlignment="Right"></Button>
            </Grid>
        </StackPanel>
    </Grid>
</Page>

